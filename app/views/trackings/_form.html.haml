= form_for @tracking do |f|
  - if @tracking.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tracking.errors.count, "error")} prohibited track from being save:"
      %ul
        - @tracking.errors.full_messages.each do |msg|
          %li= msg
  
  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :track
    = collection_select(:tracking, :track, Track.all, :id, :name)

  .field
    = f.label :goal
    = f.number_field :goal, :step => 0.01

  .field
    = f.lable :time_frame
    = f.time_field :time_frame

  .actions
    = f.submit 'Save'

= link_to :back
